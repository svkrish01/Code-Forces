//Code Arena 2025 - C. Ceremonial Welcome Optimization

#include <bits/stdc++.h>

using namespace std;

void Solution()
{
    long long Min_Cost = 0;
    
    vector<vector<int>> Costs;
    int N, K;
    
    cin >> N >> K;

    for(int X = 0; X < N; X++)
    {
        int C, A, B;
        
        cin >> C >> A >> B;
        
        Costs.push_back({min(A, B) - C, min(A, B), C});
    }
    
    sort(Costs.begin(), Costs.end(), greater<vector<int>>());
    
    for(int X = 0; X < N; X++)
    {
        if(K > 0 && Costs[X][0] > 0)
        {
            Min_Cost += Costs[X][2];
            K--;
        }
        else
        {
            Min_Cost += Costs[X][1];
        }
    }
    
    cout << Min_Cost << '\n';
}


int main()
{
    Solution();
}
